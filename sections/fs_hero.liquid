{{ 'fs_hero.css' | asset_url | stylesheet_tag }}

{% style %}
    .fs-hero {
        background: url({{ section.settings.hero_image | img_url: 'master' }}) no-repeat center center / cover;
    }
    @media (max-width: 767px) {
            .fs-hero {
                background: url({{ section.settings.hero_image | img_url: 'large' }}) no-repeat center right / cover;                    
            }
    }
{% endstyle %}

<div class="container">
    <div class="fs-hero__content">
        <h2>{{ section.settings.hero_heading }}</h2>
        <h1>{{ section.settings.hero_title }}</h1>
        <div class="fs-hero__ctas">
            {% for block in section.blocks %}
                <a href="{{ block.settings.hero_cta_url }}" class="fs-cta fs-hero__cta">{{ block.settings.hero_cta_text }}</a>
            {% endfor %}
        </div>
    </div>
</div>


<script src="{{ 'fs_hero.js' | asset_url }}" defer></script>

{% schema %}
{
    "name": "FS Hero",
    "class": "fs-hero",
    "settings": [
        {
            "type": "text",
            "id": "hero_heading",
            "label": "Hero Heading",
            "default": "IN STORES & ONLINE"
        },
        {
            "type": "text",
            "id": "hero_title",
            "label": "Hero Title",
            "default": "50% OFF EVERYTHING"
        },
        {
            "type": "color",
            "id": "hero_text_color",
            "label": "Hero Text Color",
            "default": "#FFFFFF"
        },
        {
            "type": "image_picker",
            "id": "hero_image",
            "label": "Hero Image",
            "info": "Size: 2560x650px, Compressed .jpg"
        }
    ],
    "max_blocks": 4,
    "blocks": [
        {
        "name": "Hero Link",
        "type": "link",
        "settings": [
            {
                "type": "text",
                "id": "hero_cta_text",
                "label": "Hero CTA Text",
                "default": "Shop Now"
            },
            {
                "type": "url",
                "id": "hero_cta_url",
                "label": "Hero CTA URL"
            }
        ]
        }
    ],
    "presets": [{ "name": "FS Hero"}]
}
{% endschema %}